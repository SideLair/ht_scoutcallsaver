{
  "manifest_version": 3,
  "name": "Hattrick Scout Saver",
  "version": "1.0",
  "description": "Saves scout offers to CSV",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.hattrick.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hattrick Scout Saver"
  }
}